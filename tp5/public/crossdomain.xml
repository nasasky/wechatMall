<?xml version="1.0"?>   
<!DOCTYPE cross-domain-policy SYSTEM "http://www.adobe.com/xml/dtds/cross-domain-policy.dtd">
<cross-domain-policy>
    <site-control permitted-cross-domain-policies="master-only"/>
    <!-- 允许example.com及其子域访问 -->
    <allow-access-from domain="*.b.com"/>
    <!-- 允许http://www.example.com访问 -->
    <allow-access-from domain="www.b.com"/>
    <allow-http-request-headers-from domain="*.b.com" headers="*"/>
</cross-domain-policy>
